<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lll"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_product_seller"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"
                android:layout_marginStart="20dp"


                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background = "@drawable/input"

                    android:textStyle="bold"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="55dp"

                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="10dp"

                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp" />

                <!--
                items for a single row of RecyclerView
                -->




            </LinearLayout>


        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:paddingStart="7dp"
            android:textSize="14sp"
            android:layout_below="@+id/lll"
            android:gravity="center"
            android:fontFamily="@font/opensans"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/tv_tag_type"
            android:text="Capital"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tag_type"

            android:padding="10dp"
            android:background="@drawable/input"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/opensans"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/tv_type"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/opensans"
            android:paddingStart="7dp"
            android:textSize="14sp"
            android:layout_below="@+id/tv_type"
            android:gravity="center"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/tv_price_tag"
            android:text="Region"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price_tag"

            android:fontFamily="@font/opensans"
            android:padding="10dp"
            android:background="@drawable/input"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_price_show"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:paddingStart="7dp"
            android:textSize="14sp"
            android:layout_below="@+id/tv_price_show"
            android:gravity="center"

            android:layout_marginStart="20dp"
            android:fontFamily="@font/opensans"

            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name_buyer"
            android:text="SubRegion"
            />
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_buyer"

            android:padding="10dp"
            android:background="@drawable/input"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/buyer_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:paddingStart="7dp"
            android:textSize="14sp"
            android:layout_below="@+id/buyer_name"
            android:gravity="center"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans"

            android:layout_marginEnd="10dp"
            android:id="@+id/tv_tag_email"
            android:text="Population"
            />
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tag_email"

            android:padding="10dp"
            android:background="@drawable/input"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/etemail"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:paddingStart="7dp"
            android:textSize="14sp"
            android:layout_below="@+id/etemail"
            android:gravity="center"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans"

            android:layout_marginEnd="10dp"
            android:id="@+id/tv_quant_req"
            android:text="Borders"
            />
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_quant_req"

            android:padding="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/input"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/quant_required"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:paddingStart="7dp"
            android:textSize="14sp"
            android:layout_below="@+id/quant_required"
            android:gravity="center"

            android:layout_marginStart="20dp"
            android:fontFamily="@font/opensans"

            android:layout_marginEnd="10dp"
            android:id="@+id/tv_date"
            android:text="Languages"
            />
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date"

            android:padding="10dp"
            android:background="@drawable/input"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="20dp"
            android:id="@+id/tv_date_2"/>








    </RelativeLayout>
</ScrollView>